https://leetcode.com/problems/max-chunks-to-make-sorted/
class Solution {
    public int maxChunksToSorted(int[] arr) {
        int maxcount = Integer.MIN_VALUE;
        int count = 0;

        for(int i=0; i<arr.length ; i++){
            maxcount = Math.max(arr[i],maxcount);
            if(maxcount==i){
                count++;
            }
        }
        return count;
    }
}
