// âœ… Problem: https://leetcode.com/problems/rotate-image/
// ğŸ’¡ Approach: First transpose the matrix, then reverse each row to get the 90Â° clockwise rotation.
// â±ï¸ Time: O(nÂ²), Space: O(1)

class Solution {
    public void rotate(int[][] matrix) {
        for(int i=1; i<matrix.length ; i++){
            for(int j=0; j<i; j++){
                int temp =matrix[i][j];
                matrix[i][j]=matrix[j][i];
                matrix[j][i]=temp;
            }
        }
        for(int i=0; i<matrix.length;i++){
            int sp=0;
            int ep= matrix.length-1;
            while(sp<ep){
                int temp = matrix[i][sp];
                matrix[i][sp]=matrix[i][ep];
                matrix[i][ep]=temp;
                sp++;
                ep--;
            }
        }
          for(int i=0; i<matrix.length ; i++){
            for(int j=0; j<matrix.length; j++){
                System.out.print(matrix[i][j]+" ");
          }
          System.out.println();
          }
    }
}
