// âœ… Problem: https://leetcode.com/problems/missing-number/
// ğŸ’¡ Approach: XOR from 0 to n, and XOR all elements in array. The difference gives the missing number.
// â±ï¸ Time: O(n), Space: O(1)

class Solution {
    public int missingNumber(int[] nums) {
        int xor1 = 0, xor2 = 0;
        int n = nums.length;

        for (int i = 0; i < n; i++) {
            xor1 ^= (i + 1);     
            xor2 ^= nums[i];   
        }

        return xor1 ^ xor2;  
    }
}
